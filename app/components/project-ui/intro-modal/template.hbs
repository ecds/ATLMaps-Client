<div id={{concat "modal-" @project.id}} class="uk-flex-top uk-modal-container atlm-project-intro-modal" {{did-insert this.initModal}}>
  <article class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical">
    <button class="uk-modal-close-default" type="button" uk-close></button>
    <h2>{{@project.name}}</h2>
    <section class="uk-panel uk-panel-scrollable atlm-project-intro-panel">
      {{#if @project.media}}
        <p>
          <style>.embed-container { position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden; max-width: 100%; } .embed-container iframe, .embed-container object, .embed-container embed { position: absolute; top: 0; left: 0; width: 100%; height: 100%; }</style>
          <div class='embed-container'>
            <iframe src='https://www.youtube.com/embed/vOtZBy7zafs' title="foobar" frameborder='0' allowfullscreen></iframe>
          </div>
        </p>
      {{/if}}
      <p id="intro-modal-text">{{html-safe @project.intro}}</p>
    </section>
    <p class="uk-text-right">
      <UkButton id="toggle-hide-cookie" {{on "click" this.toggleHideCookie}}>
        {{#if this.hideIntro}}
          <FaIcon @icon="check-square" />
        {{else}}
          <FaIcon @icon="square" @prefix="far" />
        {{/if}}
        Don't show each time
      </UkButton>
      <UkButton @color="secondary" uk-toggle target={{concat "#modal-" @project.id}}>
        Explore Project
      </UkButton>
    </p>
  </article>
</div>