<div class="card small">
  <div class="card-content">
    <span class="card-title grey-text text-darken-4 row">
      {{#link-to 'project' project.id}}
        <span class='truncate left'>{{project.name}}</span>
      {{/link-to}}
      {{#if mine}}
        <i class="material-icons right delete-project" {{action (route-action 'deleteProject' project.id)}}>delete</i>
      {{/if}}
    </span>
    <p class='left'>
      <h6>By: {{project.owner}}</h6>
      {{project.description}}
    </p>
  </div>
</div>
