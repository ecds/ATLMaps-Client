<div class='scroll-content'>
  {{#each layers as |layer|}}
    <div class='row result-header'>
      <div class='col s12'>

        {{!-- {{input type='checkbox' id=layer.slug checked=layer.active_in_project change=(route-action 'addRemoveLayer' layer)}} --}}
        <a {{action (route-action 'addRemoveLayer' layer)}}>
          <i class="material-icons {{if layer.active_in_project 'active'}}">
            {{if layer.active_in_project 'check_box' 'check_box_outline_blank'}}
          </i>
          {{if layer.title layer.title "Loading..."}}
        </a>
      </div>
    </div>
    <div class='row'>
      <div class='col s11 offset-s1 result-description'>{{layer.description}}</div >
    </div>
    <hr />
  {{/each}}
</div>
{{pagination-links meta=layers.content.meta}}
