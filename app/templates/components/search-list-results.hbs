<div class='scroll-content'>
  {{#each layers as |layer|}}
    <div class='result-container'>
      <div class='result-header'>

        <div class='result-action'>
          <a {{action (route-action 'addRemoveLayer' layer project)}}>
            <i class="fa {{if layer.active_in_project 'active fa-check-square-o active' 'fa-square-o'}}">
            </i>
          </a>
        </div>

        <h2 class='result-title'>
          <a {{action (route-action 'addRemoveLayer' layer)}}>
            {{if layer.title layer.title "Loading..."}}
          </a>
        </h2>

      </div>

      <div class='result-description'>
        {{#if layer.description}}
          {{{article-container article=layer.safe_description}}}
        {{else}}
          <span>Description missing.</span>
        {{/if}}
      </div >
      {{!-- <div class='result-preview'>
        <i class="fa fa-map-marker" aria-hidden="true"></i>
      </div> --}}
    </div>
    <hr />
  {{else}}
    <h4>No layers found</h4>
    <h5>Use the filters under the search tab to find layers.</h5>
  {{/each}}
</div>
