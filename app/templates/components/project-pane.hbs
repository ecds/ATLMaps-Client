{{#if (or raster vector)}}
<div class="secondary-pane-title">
<div class='project-pane-title'>
  {{title}}
</div>
{{#if raster}}
{{show-hide-layers toggleAll=true layers=model.raster_layers checked=model.visiable_raster class='switch'}}
