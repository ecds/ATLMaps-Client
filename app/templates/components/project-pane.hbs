<div class="pane-title">
  <div class='project-pane-title'>
    <h3>{{model.name}}</h3>
  </div>

  <div class='project-pane-save'>
    {{#if (and session.isAuthenticated model.may_edit)}}
      <span class='{{if model.hasDirtyAttributes "dirty"}}' onclick={{route-action "updateProject" model}}>SAVE</span>
    {{else}}
      {{#if model.exploring}}
        {{#login-link class='faint-link'}}Log in or sign up to save{{/login-link}}
      {{/if}}
    {{/if}}
  </div>
</div>
