<div class="intro-body">
    <header>
        <div class="row">
            <div class="col-md-8">
                <h1>{{project.name}}</h1>
                <h2>By: {{project.owner}}</h2>
            </div>
            <div class="col-md-4">
                <a {{action 'toggleIntro'}} class='close-button pull-right'>
                    <i class="material-icons">highlight_off</i>
                </a>
            </div>
        </div>
    </header>
    <div class="container-fluid">
        {{#if project.twoColIntro}}
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="jumbotron">
                        <div class='embed-container'>
                            <iframe src="{{project.media}}?modestbranding=1&rel=0&showinfo=0&theme=light" frameborder="0" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <article>
                        {{{project.intro}}}
                    </article>
                </div>
            </div>
            {{else if project.media}}
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="jumbotron">
                        <div class='embed-container'>
                            <iframe src="{{project.media}}?modestbranding=1&rel=0&showinfo=0&theme=light" frameborder="0" allowfullscreen></iframe>
                        </div>

                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-12">
                <article>
                    {{{project.intro}}}
                </article>
            </div>
        {{/if}}
    </div>
    <footer>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4 text-center">
                <div class="btn btn-raised btn-info">
                    <a {{action 'toggleIntro'}}>Explore Project</a>
                </div>
            </div>
            <div class="col-md-4">
                <label class="pull-right">
                    <input type="checkbox" id="dont-show" checked= {{showIntro.noIntroCookie}} onchange= {{action "supressIntro"}} />
                    <span class="check"></span> Don't show every time.
                </label>
            </div>
        </div>
    </footer>
</div>
