{{#unless codeSent}}
  <h5>Confirmation Needed</h5>
  <p>An email has been sent. Please click the link in that message to confirm your account.</p>
  <section class="button-group">
    <a {{action 'resend'}}>
        <button class="button-group-item">Resend</button>
    </a>
    <a {{action 'editEmail'}}>
        <button class="button-group-item">Edit Email</button>
    </a>
  </section>
{{else}}
  <h5>Message Sent</h5>
  <p>Please check your email and confirm your address.</p>
{{/unless}}
