<div id="base-map" class="fullscreen-map">
	<div id='map'></div>
	<div class="base-layer-controls"></div>
</div>

<div class="project-window">
	<div class="project-head">
		<div class="row project-head {{if model.editing 'project-edit' 'project-view'}}">
			<div class="col-xs-2 col-md-1 exit title">
				{{#link-to 'projects' title="Back to All Projects"}}<i class="material-icons">exit_to_app</i>{{/link-to}}
			</div>
			<div class="col-xs-6 col-md-6 title">
				{{model.name}}
			</div>
			<div class="pull-left col-xs-2 col-md-2 edit-button">
				{{#if model.may_edit}}
					<a {{action 'toggleEdit'}} title= {{if isEditing 'Exit Edit Mode' 'Edit Project'}}>
						<i class="material-icons pull-right">mode_edit</i>
					</a>
				{{/if}}
			</div>
		</div>

		<nav class="container project-nav">
			<!-- <div class="project-pane"> -->
				{{flash-message}}
			<!-- </div> -->
				{{liquid-outlet}}
			<div class="project-nav-group pull-left">
				<div class="row">
					{{#link-to "project.info" class="" id='project-info' title="Project Description" }}
						<i class="material-icons">info_outline</i> About this Project
					{{/link-to}}
				</div>
				{{#if isEditing}}
					<div class="row">
						{{#link-to "project.browse-layers" class="" id='browse' title="Browse Layers" }}
							<i class="material-icons">search</i> Find Maps
						{{/link-to}}
					</div>
				{{/if}}
				{{#if model.exploring}}
					<div class="row">
						{{#link-to "project.browse-layers" class="" id='browse' title="Browse Layers" }}
							<i class="material-icons">search</i> Find Maps
						{{/link-to}}
					</div>
				{{/if}}
				{{#if model.may_edit}}
					<div class="row">
						{{#link-to "project.browse-layers" class="" id='browse' title="Browse Layers" }}
							<i class="material-icons">search</i> Find Maps
						{{/link-to}}
					</div>
				{{/if}}
				{{#if model.vector_layer_project_ids}}
					<div class="row">
						{{#link-to "project.vector-layers" class="" id='vector-data' title="Pinpoint Layers" }}
							<i class="material-icons atlmaps-ext database"></i> Data Maps
						{{/link-to}}
					</div>
				{{/if}}
				{{#if model.raster_layer_project_ids}}
					<div class="row">
						{{#link-to "project.raster-layers" class="" id='raster-layers' title="Archival Map Layers" }}
							<i class="material-icons">layers</i> Paper Maps
						{{/link-to}}
					</div>
				{{/if}}
				<div class="row">
					{{#link-to "project.base-layers" class="" id='controls' title="Change Base Map" }}
						<i class="material-icons">map</i> Select Base Maps
					{{/link-to}}
				</div>
				<!-- {{#link-to "project.help" class=" project-nav" id='help' title="Show Help Window"}}
		    	<i class="material-icons">help_outline</i>
		    {{/link-to}} -->
			</div>
			<div class="project-meta pull-right">
				<!-- <h4>By <span>{{model.owner}}</span></h4>
			<h5>Emory University</h5> -->
			</div>

		</nav>
	</div>
	<div class="col-md-8 pull-right">
		{{outlet "browse-results"}}
	</div>
</div>

<!-- <a class=" rotate -fab -sm toggle-results"><i class="material-icons">chevron_right</i></a> -->
{{vector-info}}
{{#if showIntro.show}}
	{{project-intro-modal action='toggleIntro' project=model template=model.templateSlug}}
{{/if}}
