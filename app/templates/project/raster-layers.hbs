{{outlet}}
{{ reorder-layers isEditing=isEditing model=model}}

<section class="cotainer project-pane">
    {{#liquid-if editSuccess}}
        <div class="alert alert-dismissible alert-success">
            Project info has been updated!
        </div>
    {{/liquid-if}}
    {{#liquid-if editFail}}
        <div class="alert alert-dismissible alert-danger">
            Dang, something went wrong. The project info was not updated.
        </div>
    {{/liquid-if}}
    <section class="row">
        <section class="col-xs-8">
            <h3>Archival Map Layers</h3>
        </section>
        <section class="col-xs-4">
            <div class="togglebutton opacity">
            	<label>
            		<input id="toggle-layer-opacity" type="checkbox" checked="checked"/>
            			<span class="toggle"></span>
            			<span id="show-hide-layers" class="toggle_label"></span>
            	</label>
            </div>
        </section>
</section>
    <div class="raster-list" id="layer_sort">
        {{#each model.raster_layer_project_ids as |layer|}}
            <div class="{{layer.raster_layer_id.slug}} raster-layer panel panel-default" id="{{layer.raster_layer_id.slug}}">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-10">
                            <h4><a {{action 'showLayerInfoDetals' layer.raster_layer_id.slug}}>{{layer.raster_layer_id.title}}</a></h4>
                        </div>
                        <div class="col-xs-2">
                            <i class="material-icons reorder handle pull-right">code</i>
                        </div>
                    </div>


                    <div class="row">
                        {{opacity-slider layer=layer.raster_layer_id}}
                    </div>
                    <div class="layer-info-detail {{layer.raster_layer_id.slug}}">
                        <article>{{layer.raster_layer_id.description}}</article>
                        {{partial 'citation'}}
                    </div>
                </div>
            </div>
        {{else}}
            No data layers have been added.
        {{/each}}
    </div>
