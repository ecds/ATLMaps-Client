{{#project-pane title='About this Project'}}
<div class="row">
        <div class="col s12">
          <div class="card">
            <div class="card-content">
              <span class="card-title">About</span>
              <p>{{model.project.description}}</p>
            </div>
            <div class="card-action">
              {{#if model.project.hasIntro}}
                  <button class="btn waves-effect waves-light" type="submit" {{action 'toggleIntro'}}>
                    Show Intro
                  </button>
                {{/if}}
            </div>
          </div>
        </div>
      </div>
{{/project-pane}}
