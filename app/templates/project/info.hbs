{{#project-pane title='About this Project' model=model.project}}
    <div class="pane-card">
        {{this.exploring}}
        {{#ember-inline-edit onSave=(route-action 'updateProject' model.project 'Description Updated!') onClose=(route-action 'cancleUpdate' model.project) as |inline-edit| }}
            {{#inline-edit.editable}}
                <article>
                    {{model.project.description}}
                </article>
            {{/inline-edit.editable}}

            {{#inline-edit.editor value=model.project.description }}
                {{textarea class='description' value=model.project.description maxlength='500' rows='40'}}
                <span class='character-counter {{if (gte model.project.description.length 485) 'red-text'}} right'>
                  {{model.project.description.length}}/500
                </span>
            {{/inline-edit.editor}}
        {{/ember-inline-edit}}


        {{#if model.project.hasIntro}}

            <div class='neat-row'>
                <button class="waves-effect waves-light" type="submit" {{action (toggle-action 'suppressIntro' model.project)}}>
            learn more
          </button>
            </div>
        {{/if}}
    </div>
{{/project-pane}}
