{{#project-pane title='Data Layers' model=model.project vector=true action="toggleAllVectorLayers" }}
    <ul class='scrollable-list project-collapsible collapsible'>

        {{#each model.project.vector_layer_project_ids as |layer|}}
            <li id= {{layer.vector_layer_id.name}} class='layer-list-item'>
                {{#if layer.vector_layer_id.name}}
                    {{#layer-list-item layer=layer.vector_layer_id}}
                        {{layer-item-title layer=layer.vector_layer_id layers=model.project.vector_layer_ids}}
                        {{layer-list-item-actions layer=layer.vector_layer_id model=model}}
                    {{/layer-list-item}}
                {{else}}
                    Loading...
                {{/if}}
            </li>
            {{else}}
                <h4 class='row'>No data layers have been added</h4>
        {{/each}}
    </ul>
{{/project-pane}}
