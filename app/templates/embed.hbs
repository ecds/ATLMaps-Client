<header class='embed-header'>
  <h1>{{layer.title}}</h1>
</header>
{{#if raster}}
  {{!-- {{range-slider start=10 step=1 min=0 max=10 on-change="setOpacity"}} --}}
  <input class='embed-slider' id={{raster.name}} type="range" min="0" max="100" value='100' oninput={{action (route-action 'setOpacity')}} onchange={{action (route-action 'setOpacity')}} />
{{/if}}
<div class='layer-control'>
  <i class="fa fa-cog" aria-hidden="true"></i>
</div>
<div id='base-map' class='fullscreen-map'>
  <div id='map' class='atlmap'></div>
  <a href='{{layer.absolute_url}}' target='_blank' title='Open in ATLMaps'><img class='watermark' src='/assets/images/logo-small.png' /></a>
</div>
{{vector-info}}
