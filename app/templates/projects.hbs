<section class="uk-container">
{{#if this.currentUser.user}}
  <h2>My Projects</h2>
  <section class="uk-child-width-1-1@s uk-child-width-1-2@m uk-child-width-1-3@l" uk-grid="masonry: true">
    {{#each this.currentUser.user.projects as |project|}}
      <section class="uk-card uk-card-default">
        <section class="uk-card-media-top">
          <LinkTo @route="project" @model={{project.id}}>
            <img src={{if project.photo project.photo ""}} {{on "error" this.imageError}} alt="ATLMaps placeholder" />
          </LinkTo>
        </section>
        <section class="uk-card-body">
          <LinkTo @route="project" @model={{project.id}}>
            <h3 class="uk-card-title">{{project.name}}</h3>
          </LinkTo>
          <p>
            {{html-string project.description}}
          </p>
        </section>
        <section class="uk-card-footer">
          <ConfirmModal @onConfirm={{fn this.deleteProject project}} @message={{concat "Are you sure you want to delete " project.name}}>Delete</ConfirmModal>
        </section>
      </section>
    {{/each}}
  </section>
{{/if}}
</section>