<div class="banner orange">
  <div class="container">
    <header>
      <h2>Projects</h2>
    </header>
  </div>
</div>
{{!#if currentUser }}
<span calss="add-new-project">
  {{!-- <a class="btn btn-fab btn-default new-project" {{action 'createProject'}}><i class="material-icons">add</i></a> --}}
</span>{{!/if}}
<div class="banner orange blurred">
  <div class="container">
    <h3>Published Projects</h3>
    <hr />
    <div class="row">
      {{#if model.isPending}}
        <h2>Loading...</h2>
      {{else}}
        {{#each model.published as |project|}}
          <div class='col l4 m6 s12'>
            <div class="card small">
              <div class="card-content">
                <span class="card-title grey-text text-darken-4">{{#link-to 'project' project.id}}{{project.name}}{{/link-to}}</span>
                <p>
                  <h6>By: {{project.owner}}</h6>
                  {{project.description}}
                </p>
              </div>
            </div>
          </div>
      {{else}}
        <p>There are no projects visible at this time :(</p>
        {{/each}}
      {{/if}}
    </div>
  </div>
</div>
